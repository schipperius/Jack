                <li><%= link_to "Copyright" %></li>
              </ul>
            </li>
            <li><%= link_to "Contact" %></li>
          </ul>

        </div> <!-- end .nav-collapse -->

      </div> <!-- end .container-fluid -->x
    </div>
  </nav>

  <header id="header" class="row-fluid">
    <div id="logo" class="round">
      <img>
        <%= link_to logo, root_path %>
      <img>
    </div>
    <hgroup id="hgroup">
      <h1><span>The Book of Jack</span></h1>
      <h2><span>An entertaining exploration of all things Jack</span></h2>
    </hgroup>
  </header>

  <div class="container-fluid">
    <div class="row-fluid">

      <div class="pull-left span9"> <!-- section -->
        <%= yield %>
