        </a>
        <a class="brand" href="#">The Book of Jack</a>

        <div class="nav-collapse">

          <ul class="nav">
            <li><%= link_to "Browse Articles" %></li>
            <li class="dropdown">
              <a href="#"
                class="dropdown-toggle"
                data-toggle="dropdown">
                Gallery
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Photos" %></li>
                <li><%= link_to "Videos" %></li>
                <li><%= link_to "Music" %></li>
              </ul>
            </li>
            <li><%= link_to "Cartography" %></li>
          </ul>

          <form class="navbar-search pull-left">
          <input type="text" class="search-query" placeholder="Search Articles">
          </form>

          <ul class="nav pull-right">
            <li class="dropdown">
              <a href="#"
                class="dropdown-toggle"
                data-toggle="dropdown">
                About
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Forward" %></li>
                <li><%= link_to "Preface" %></li>
