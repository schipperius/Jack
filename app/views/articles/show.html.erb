<article class="row-fluid">
<div class="span12 columns">

  <section>
    <p id="notice"><%= notice %></p>
    <ul class="nav nav-pills">
      <li><%= link_to 'Back', articles_path %></li>
      <li><%= link_to 'Edit', edit_article_path(@article) %></li>
      <li><%= link_to 'Destroy', @article, 
      confirm: 'Are you sure?', 
      method: :delete %> </li>
    </ul>
  </section>

  <header class="row-fluid">
    <section class="article-image span4 columns pull-left">
      <div>
        <ul class="thumbnails">
          <li>
            <a href="#" class="thumbnail">
              <img src="http://placehold.it/260x180" alt="">
            </a>
          </li>
        </ul>
      </div>
    </section>

    <section class="article-text span8 pull-right">
      <h3 class="article-position">
        <strong>
          <span>#<%= @article.position %> - </span>
          <span><%= @article.title %></span>
        </strong>
      </h3>

      <p class="article-sub-title">
        Date<%#= @article.published_at.strftime('%b %d, %Y') %> |
        <%= link_to "tag 1", root_url %> |
        <%= link_to "tag 2", root_url %> |
        <%= link_to "tag 3", root_url %>
      </p>

      <p class="article-intro">
        <%= @article.introduction %>
      </p>
    </section>
  </header>

  <section id="tabs" class="article-nav">
    <div class="tabbable">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#1" data-toggle="tab"><%= @article.title %></a></li>
        <li><a href="#2" data-toggle="tab">Images</a></li>
        <li><a href="#3" data-toggle="tab">Footnotes</a></li>
        <li><a href="#4" data-toggle="tab"># Comments</a></li>
        <li><a href="#5" data-toggle="tab">Similar Articles</a></li>
        <li><a href="#6" data-toggle="tab">Previous Article</a></li>
        <li><a href="#7" data-toggle="tab">Next Article</a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="1">
          <p><%= @article.description %></p>
        </div>
        <div class="tab-pane" id="2">
        </div>
        <div class="tab-pane" id="3">
        </div>
        <div class="tab-pane" id="4">
        </div>
        <div class="tab-pane" id="5">
        </div>
        <div class="tab-pane" id="6">
        </div>
        <div class="tab-pane" id="7">
        </div>
      </div>
    </div>
  </section>

</div>
</article>