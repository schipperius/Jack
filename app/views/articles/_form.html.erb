      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :position %>
    <%= f.number_field :position %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :cols => 80 %>
  </div>

  <div class="field">
    <%= f.label :introduction %>
    <%= f.text_area :introduction, :rows => 6, :cols => 80 %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :rows => 6, :cols => 80 %>
  </div>

  <div class="field">
    <%= f.label :footnotes %><br />
    <%= f.text_area :footnotes, :rows => 2 %>
  </div>

  <div class="field">
    <%= f.label :published_at %>
    <%= f.datetime_select :published_at %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
